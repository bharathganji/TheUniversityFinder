<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="5dp"
                        android:top="5dp"
                        android:right="20dp"
                        android:bottom="5dp"
                        />

                    <solid android:color="#ffffff" />
                    <stroke android:width="2dp" android:color="#e8b6b6" />
                    <corners android:radius="20dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/ic_spinner_down"/>

            </item>

        </layer-list>
    </item>
</selector>